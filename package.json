{
  "name": "ai-kawaii-terminal",
  "version": "1.0.0",
  "description": "AI Character Chat Terminal App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/react": "^18.0.29",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@google-cloud/speech": "^7.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "node-pty": "^1.0.0"
  },
  "build": {
    "appId": "com.ai-kawaii.terminal",
    "productName": "KawAIi Code",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "app-icon-1024.png"
    }
  }
}
