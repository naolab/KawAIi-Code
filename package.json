{
  "name": "kawaii-code",
  "version": "1.0.0",
  "description": "AI Character Chat Terminal App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "postinstall": "electron-rebuild -f -w node-pty",
    "rebuild": "electron-rebuild -f -w node-pty",
    "build": "npm run rebuild && node build.js build",
    "build:nextjs": "cd ai-kawaii-nextjs && npm run build",
    "build:electron": "electron-builder",
    "build:simple": "npm run build:nextjs && npm run rebuild && npm run build:electron",
    "pack": "node build.js pack",
    "dist": "node build.js build",
    "quick-build": "npm run build:nextjs && electron-builder --dir",
    "clean": "rm -rf dist/ && rm -rf ai-kawaii-nextjs/out/ && rm -rf ai-kawaii-nextjs/.next/",
    "clean-build": "npm run clean && npm install && npm run build"
  },
  "author": "AI Kawaii Project",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/react": "^18.0.29",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.0",
    "node-pty": "^1.0.0"
  },
  "build": {
    "appId": "com.ai-kawaii-project.kawaii-code",
    "productName": "KawAIi Code",
    "directories": {
      "output": "dist"
    },
    "publish": null,
    "generateUpdatesFilesForAllChannels": false,
    "buildDependenciesFromSource": false,
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "!src/assets/wallpapers/default/*.mp4",
      "docs/**/*",
      "ai-kawaii-nextjs/out/**/*",
      "ai-kawaii-nextjs/websocket-server.js",
      "!ai-kawaii-nextjs/node_modules/**/*",
      "!ai-kawaii-nextjs/src/**/*",
      "!ai-kawaii-nextjs/.next/**/*",
      "!ai-kawaii-nextjs/package*.json",
      "!ai-kawaii-nextjs/tsconfig*",
      "!ai-kawaii-nextjs/server.log"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "mac": {
      "icon": "assets/icons/new-app-icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "identity": "NAO TSUYOSHI (R5829GY53J)",
      "notarize": {
        "teamId": "R5829GY53J"
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/new-app-icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/new-app-icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
